<div class="container">
    <br>
  <div class="h2 text-center mt-2">Login:</div>
  <form action="/login" method="POST">
    <div class="form-row justify-content-md-center">
      <div class="col-12 col-md-6">
        <div class="form-group ">
          <label for="userEmail">E-mail</label>
          <input class="form-control" type="text" name="userEmail" size="30" placeholder="Enter e-mail"
            value="{{loginValues.email}}" required />
          {{#if validation.error}}
          <label for="userEmail" class="text-danger mt-0">{{validation.error}}</label>
          {{/if}}
        </div>
      </div>
    </div>
    <div class="form-row justify-content-md-center">
      <div class="col-12 col-md-6">
        <div class="form-group">
          <label for="password">Password</label>
          <input class="form-control" type="password" name="password" size="30" placeholder="Enter Password"
            value="{{loginValues.password}}" required />
        </div>
      </div>
    </div>
    <div class="row justify-content-md-center">
      <div class="col-12 col-md-6">
        <input type="submit" class="btn btn-success form-control" value="Login!">
      </div>
    </div>
  </form>
</div>