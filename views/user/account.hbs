<div class="container">
  <br>
  <div class="h2 text-center mt-2">Account:</div>
  <br>
  <div class="container-fluid mt-3 pt-3  w-100">
    <div class="row">
      <div class="col-12 col-md-8">
        <div class="container">
          {{#if emptyPhoto}}
          <br>
          <h2 class="text-center">You don't have any Photos.</h2>
          <h2 class="text-center">Publish some.</h2>
          {{else}}
          <table class="table table-hover">
            <thead>
              <tr class="row">
                <th class="col-2 ">Thumbnail</th>
                <th class="col-6 col-md-4 ">Title</th>
                <th class="col-2 ">Downloads</th>
                <th class="col-2 ">Price</th>
                <th class="col-2 ">Manage</th>
              </tr>
            </thead>
            <tbody>
              <tr class="row">
                <th class="col-2 "><img src="temp/banana.jpg" alt="Title" class="img-thumbnail"></th>
                <th class="col-6 col-md-4 ">Lonely Banana</th>
                <th class="col-2 ">2</th>
                <th class="col-2 ">5.50</th>
                <th class="col-2 "><a href="/photo/manage" class="btn btn-primary">Manage</a></th>
              </tr>
              {{#each photos}}
              <tr class="row">
                <th class="col-2 "><img src="{{fileName}}" alt="Title: {{title}}" class="img-thumbnail"></th>
                <th class="col-6 col-md-4 "> {{title}}</th>
                <th class="col-2 ">{{downloads}}</th>
                <th class="col-2 ">{{price}}</th>
                <th class="col-2 "><a href="/photo/manage" class="btn btn-primary">Manage</a></th>
              </tr>
              {{/each}}
            </tbody>
          </table>
          {{/if}}
        </div>
      </div>
      <div class="col-12 col-md-3">
        <div class="container">
          <div class="card">
            <div class="card-header">
              Account Summary
            </div>
            <div class="card-body">
              <p class="card-text text-muted">Total (1)</p>
              <h5 class="card-title text-right">CAD$ 11.00</h5>
              <hr>
              <div class="row ">
                <div class="container d-flex justify-content-between">
                  <a href="/user/cash-out" class="btn btn-success">Cash out</a>
                  <a href="/user/add-balance" class="btn btn-danger">Add</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>