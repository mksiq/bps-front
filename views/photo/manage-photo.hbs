<div class="container">
  <br>
  <div class="h2 text-center mt-2">Manage photo:</div>
  <form action="/update-photo" method="POST" enctype="multipart/form-data">
    <div class="form-row">
      <div class="col-12 col-md-6">
        <div class="form-group">
          <label for="title">Title</label>
          <input name="title" id="title" class="form-control" type="text" size="30" placeholder="Enter a title"
            value="{{photo.title}}" required />
          {{#if validation.title}}
          <small for="title" class="text-danger mt-0">{{validation.title}}</small>
          {{/if}}
        </div>
      </div>
      <div class="col-12 col-md-6">
        <div class="form-group">
          <label for="tags ">Tags</label>
          <input class="form-control" name="tags" id="tags" type="text"
            placeholder="Enter Tags, separate words with space." value="{{photo.tags}}" required />
        </div>
      </div>
    </div>
    <div class="form-row">
      <div class="col-12 col-md-6">
        <label for="servings">Price</label>
        <input class="form-control" name="price" type="number" id="price" placeholder="Enter price"
          value="{{photo.price}}" required />
        {{#if validation.price}}
        <small for="servings" class="text-danger mt-0">{{validation.price}}</small>
        {{/if}}
      </div>
      <div class="col-12 col-md-6">
          <label class="text-light">.<input class="form-control" name="id" id="id" type="number"
           value="{{photo.id}}" hidden required /></label>
          <input type="submit" class="btn btn-success form-control" value="Update"></div>
    </div>
    <br>
  </form>
</div>