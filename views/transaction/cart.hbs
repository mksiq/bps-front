<div class="container">
  <br>
  <div class="h3 text-center">Your cart</div>
  {{#if cart}}
  <table class="table table-hover">
    <thead>
      <tr class="row">
        <th class="col-2 ">Thumbnail</th>
        <th class="col-6 col-md-4 ">Title</th>
        <th class="col-2 ">Price</th>
        <th class="col-2 ">Manage</th>
      </tr>
    </thead>
    <tbody>
      {{#each photos}}
      <tr class="row ">
        <th class="col-2 "><img src="{{fileName}}" alt="Title: {{title}}" class="img-thumbnail"></th>
        <th class="col-6 col-md-4 "> {{title}}</th>
        <th class="col-2 ">{{price}}</th>
        <th class="col-2 "><a href="/remove/{{id}}" class="btn btn-danger">Remove</a></th>
      </tr>
      {{/each}}
    </tbody>
  </table>
  <form action="/checkout" method="POST">
    <input type="text" name="id" hidden>
    <input type="submit" class="btn btn-success form-control" value="Checkout!">
  </form>
  {{else}}
  <br>
  <div class="h4 text-center">You don't have any photos in your cart.</div>
  <br>
  <div class="p text-center">Please add some</div>
  {{/if}}
</div>
<br>